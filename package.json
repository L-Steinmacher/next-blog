{
  "name": "next-blog",
  "version": "0.1.0",
  "private": true,
  "author": "Lucas Steinmacher (https://www.steinmacher.dev",
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "postinstall": "prisma generate",
    "prisma:studio": "prisma studio",
    "lint": "next lint",
    "start": "next start"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "prisma:seed": "ts-node ./prisma/seed.ts",
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.3.1",
    "@t3-oss/env-nextjs": "^0.6.1",
    "@tanstack/react-query": "^4.35.3",
    "@trpc/client": "^10.38.4",
    "@trpc/next": "^10.38.4",
    "@trpc/react-query": "^10.38.4",
    "@trpc/server": "^10.38.4",
    "@vercel/analytics": "^1.0.2",
    "@vercel/postgres": "^0.5.0",
    "bad-words": "^3.0.4",
    "date-fns": "^2.30.0",
    "esm": "^3.2.25",
    "gray-matter": "^4.0.3",
    "langchain": "^0.0.153",
    "lru-cache": "^10.0.1",
    "next": "^13.5.2",
    "next-auth": "^4.23.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "resend": "^1.1.0",
    "superjson": "1.13.1",
    "unified": "^11.0.3",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@playwright/test": "^1.38.1",
    "@types/bad-words": "^3.0.1",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.6.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/react-google-recaptcha": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.5.2",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "prisma": "^5.3.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "ct3aMetadata": {
    "initVersion": "7.15.0"
  }
